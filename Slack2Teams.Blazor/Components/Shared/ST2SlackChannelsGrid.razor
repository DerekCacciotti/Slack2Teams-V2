<RadzenDataGrid AllowFiltering="true" AllowColumnResize="false" FilterMode="FilterMode.Advanced"
                AllowSorting="true" AllowPaging="true" PagerHorizontalAlign="HorizontalAlign.Left"
                LogicalFilterOperator="LogicalFilterOperator.Or" SelectionMode="DataGridSelectionMode.Multiple"
                Data="@SlackChannels">
    <Columns>
        <RadzenDataGridColumn TItem="SlackChannel" Width="40px" Filterable="false" Sortable="false">
            <Template Context="channel">
                <RadzenCheckBox TValue="bool" Value="@(selectedChannels.Contains(channel))" Change="@(args => OnSelectionChanged(args, channel))" />
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="SlackChannel" Property="name" Title="Channel Name" />
       
    </Columns>
</RadzenDataGrid>