@inherits LayoutComponentBase
@inject NavigationManager _nav
<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => isSidebarExpanded = !isSidebarExpanded)" />
            <RadzenLabel Text="Slack To Teams " />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@isSidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Click="GoToHome" />
            <RadzenPanelMenuItem Text="Counter" Icon="account_box" Click="GotoCounter" />
        </RadzenPanelMenu>
        <div class="rz-p-4">
            Sidebar
        </div>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        Footer
    </RadzenFooter>
</RadzenLayout>
@code
{
    bool isSidebarExpanded = true;

    private void GoToHome()
    {
        _nav.NavigateTo("/");
    }

    private void GotoCounter()
    {
        _nav.NavigateTo("/counter");
    }
}


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>