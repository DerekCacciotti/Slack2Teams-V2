@page "/Login"
<PageTitle>Login</PageTitle>
<S2TCard Title="Login">
    <Content>
        @if (hasError)
        {
            @foreach (var error in errors)
            {
                <RadzenAlert AlertStyle="AlertStyle.Danger" Title="Error Logging In">
                    @error
                </RadzenAlert>
            }
        }
        <RadzenTemplateForm Data="_model">
            <RadzenLogin Style="flex: 0;" @ref="_loginForm" AllowResetPassword="true" AllowRememberMe="false" Login="LoginUser" ></RadzenLogin>
        </RadzenTemplateForm>

    </Content>
</S2TCard>
<style>
    .rz-login .rz-form .rz-form-row .rz-label
    {
        flex: 0;
    }
</style>